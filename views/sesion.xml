<record model="ir.ui.view" id="session_form_view">
    <field name="name">session.form</field>
    <field name="model">open_academy.session</field>
    <field name="arch" type="xml">
        <form string="Session Form">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

